// ------------- CODE -------------
#include <bits/stdc++.h>
#include <cmath>
using namespace std;


int main()
{
 string welcomeMessage = "Welcome to Oreo's calorie calcultor!!";
 
 string promptMessage = "Enter the number of cookies:";
 string goodbyeMessage = " Keep eating Oreo's";

 int cookiesEaten;
 cin >> cookiesEaten;
 
  cout << welcomeMessage << endl;
  cout << endl;
   cout << promptMessage  << endl;
   cout << endl;
   
  cout << fixed << setprecision(1);
 double servingSize;
 servingSize = cookiesEaten / 5.0;
 cout << cookiesEaten <<" is "<< servingSize << " servings of Oreo's!" <<  endl;
 
  double caloriesEaten;
 static_cast<double> ( caloriesEaten = servingSize * 160.0);
 

 
cout << servingSize << " servings of Oreo's is " << caloriesEaten << " calories consumed." << endl;
cout << endl;
cout << goodbyeMessage << endl;
 
 return 0;
}
 





